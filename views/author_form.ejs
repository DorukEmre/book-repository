<%- include('partials/head.ejs') %>
    <title><%= title %> | Book repository</title>
</head>
<body>
    <%- include('partials/sidebar.ejs') %>

    <h1><%= title %></h1>

    <form action="" method="post">
        <div class="form-group">
            <label for="first_name">First Name: </label>
            <input id="first_name" class="form-control" type="text" placeholder='First Name' name="first_name" required value='<%= (typeof author === 'undefined') ? '' : author.first_name %>'>

            <label for="family_name">Last Name: </label>
            <input id="family_name" class="form-control" type="text" placeholder='Last Name' name="family_name" required value='<%= (typeof author === 'undefined') ? '' : author.family_name %>'>

            <label for="date_of_birth">Date of birth: </label>
            <input id="date_of_birth" class="form-control" type="date" name="date_of_birth" value='<%= (typeof author === 'undefined') ? '' : author.date_of_birth %>'>

            <label for="date_of_death">Date of death: </label>
            <input id="date_of_death" class="form-control" type="date" name="date_of_death" value='<%= (typeof author === 'undefined') ? '' : author.date_of_death %>'>

            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
        <% if (typeof errors != 'undefined') { %>
            <ul>
                <% for( let i = 0; i < errors.length; i++ ) { %>
                    <li><%= errors[i].msg %></li>
                <% } %>
            </ul>
        <% } %>
    </form>

<%- include('partials/footer.ejs') %>