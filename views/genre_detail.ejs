<%- include('partials/head.ejs') %>
    <title><%= title %> | Book repository</title>
</head>
<body>
    <%- include('partials/sidebar.ejs') %>
    <h1>Genre: <%= genre.name %></h1>
    <div style='margin-left:20px;margin-top:20px'>
    <h4>Books</h4>
        <% if (genre_books) { %>      
            <dl>
            <% for( let i = 0; i < genre_books.length; i++ ) { %>
                <dt>
                    <a href="<%= genre_books[i].url %>"><%= genre_books[i].title %></a>
                </dt>
                <dd>
                    <%= genre_books[i].summary %>
                </dd>                
            <% } %>
            </dl>
        <% } else { %>
            <p>
                There are no genres.
            </p>
        <% } %>
    </div>

